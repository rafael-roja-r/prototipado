<div class="row">
	<div class="col s12">
		<div class="card-panel">
			<div class="card-content">
				<div class="row">
					<h5 class="col s12">Determinacion de costos</h5>
				</div>
				<div class="row">
					<form class="col s12">
						<div class="row">
							<div class="input-field col s12 m6 l6">
			          <input id="Materia" type="text" class="validate">
			          <label for="Materia">Producto</label>
			        </div>
							<div class="input-field col s12 m3 l3">
								<input id="compra" type="text" class="validate">
								<label for="compra">Unidades</label>
							</div>
			        <div class="input-field col s12 m3 l3">
			          <select>
			          	<option>Seccional</option>
			          	<option>Automatizada</option>
			          </select>
			          <label for="produccion">Tipo Produccion</label>
			        </div>
						</div>
						<div class="row">
							<div class="input-field col s12 m3 l3">
								<input id="costo" type="number" class="validate">
								<label for="costo">Costo Unitario</label>
							</div>
			        <div class="input-field col s12 m3 l3 ">
			          <input id="producido" type="number" class="validate">
			          <label for="producido">Unidades Producidas</label>
			        </div>
							<div class="input-field col s12 m3 l3">
								<input id="Unitario" type="number" class="validate">
								<label for="Unitario">Precio Unitario</label>
							</div>
							<div class="input-field col s12 m3 l3">
								<input id="costoTotal" type="number" class="validate">
								<label for="costoTotal">Costo Total</label>
							</div>
						</div>
						<div class="row">
							<div class="col s12 m3 l3">
								<select id="tipoCosto" >
									<option>Costo Fijo</option>
									<option>Costo Variable</option>
									<option>Costo Directo</option>
								</select>
								<label for="costo">Tipo de Costo</label>
							</div>
			        <div class="col s12 m3 l3">
			        	<button class="btn waves-effect waves-light grey" id="btnEnviar" type="submit" name="action">
			        		Enviar
								 	<i class="material-icons right">send</i>
							</button>
			        </div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
